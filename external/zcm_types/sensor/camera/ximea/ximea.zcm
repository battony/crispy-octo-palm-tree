/**
 * \struct ZcmXimeaTemperature
 * \brief Diagnostic info about sensor temperature
 *
 * \var ZcmXimeaTemperature::target
 * \brief Target temperature for automatic temperature control. Range: [ 0, 200 ]
 *
 * \var ZcmXimeaTemperature::board
 * \brief Camera sensor board temperature.
 *
 * \var ZcmXimeaTemperature::control
 * \brief Temperature control mode.
 *
 * \var ZcmXimeaTemperature::MODE_OFF
 * \brief Controlling of elements (TEC/Peltier, Fans) is turned off.
 *
 * \var ZcmXimeaTemperature::MODE_AUTO
 * \brief Controlling of elements is performed automatically by API or camera.
 *
 * \var ZcmXimeaTemperature::MODE_MANUAL
 * \brief Controlling of elements is done manually by application.
 */
struct ZcmXimeaTemperature
{
	float target;
	float board;
	int8_t control;

	const int8_t MODE_OFF    = 0;
	const int8_t MODE_AUTO   = 1;
	const int8_t MODE_MANUAL = 2;
}

//=======================================================================================

/**
 * \struct ZcmXimeaInfo
 * \brief Diagnostic info about sensor
 *
 * \var ZcmXimeaInfo::service
 * \brief Service processin info
 *
 * \var ZcmXimeaInfo::temperature
 * \brief Diagnostic info about sensor temperature
 */
struct ZcmXimeaInfo
{
	ZcmService service;

	ZcmXimeaTemperature temperature;
}

